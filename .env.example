# ===== Castle Lord Tycoon - Environment Variables Template =====
# .env.dev 또는 .env.prod 파일을 생성할 때 이 템플릿을 사용하세요

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=10001
POSTGRES_DB=castle_lord_tycoon
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=10002

# Server Configuration
ASPNETCORE_ENVIRONMENT=Development
SERVER_PORT=10010

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-min-32-characters-long
JWT_ISSUER=CastleLordTycoon
JWT_AUDIENCE=CastleLordTycoon-Client
JWT_ACCESS_TOKEN_EXPIRATION_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7

# SignalR Configuration
SIGNALR_HEARTBEAT_INTERVAL_SECONDS=30
SIGNALR_CLIENT_TIMEOUT_SECONDS=60

# Logging
LOG_LEVEL=Information

# Google
GOOGLE_ANDROID_CLIENT_ID=your_client_id
GOOGLE_WEB_CLIENT_ID=your_client_id
GOOGLE_WEB_SECURE_PASSWORD=your_password